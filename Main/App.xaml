<Application x:Class="DataTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataTracker"
             xmlns:utility="clr-namespace:DataTracker.Utility"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <utility:BoolToVisibilityConverter x:Key="BoolToHiddenConverter" TrueValue="Visible" FalseValue="Hidden" />
        <utility:BoolToVisibilityConverter x:Key="Flip" TrueValue="Hidden" FalseValue="Visible" />
        <utility:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Application.Resources>
</Application>
