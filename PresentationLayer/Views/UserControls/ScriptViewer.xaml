<Window x:Class="PresentationLayer.Views.UserControls.ScriptViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer.Views.UserControls"
        xmlns:model="clr-namespace:PresentationLayer.ViewModel"
        mc:Ignorable="d"
        Title="ScriptViewer" Height="500" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="TextScript" Height="400" Width="450" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="21,21,21,5" />
            <Button Content="Close" Width="100" Height="20" IsCancel="True" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
